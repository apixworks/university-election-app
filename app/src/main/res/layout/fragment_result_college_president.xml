<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.apix.unielection.ResultCollegePresidentFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/prof"
                android:id="@+id/backImg"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:alpha="0.9"/>

            <android.support.v7.widget.CardView
                android:layout_width="110dp"
                android:layout_height="140dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#e3e3e3"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:id="@+id/imgCard">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fred"
                    android:id="@+id/img"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apina, Frederick R."
                android:layout_toEndOf="@id/imgCard"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:id="@+id/name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BSc. Software Engineering"
                android:layout_toEndOf="@id/imgCard"
                android:layout_below="@id/name"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#ffffff"
                android:id="@+id/program"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year Of Study: 2"
                android:layout_toEndOf="@id/imgCard"
                android:layout_below="@id/program"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#ffffff"
                android:id="@+id/yosCollegePresident"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#ffffff"
                android:layout_toEndOf="@id/imgCard"
                android:layout_marginStart="8dp"
                android:layout_below="@id/yosCollegePresident"
                android:layout_marginTop="8dp"
                android:id="@+id/gender"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number Of Votes:"
                android:textColor="#ffffff"
                android:layout_toEndOf="@id/imgCard"
                android:layout_marginStart="8dp"
                android:layout_below="@id/gender"
                android:layout_marginTop="8dp"
                android:id="@+id/num"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="232"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/gender"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/num"
                android:layout_marginStart="8dp"
                android:id="@+id/votesCollegePresident"/>

            <View
                android:layout_width="110dp"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:layout_below="@id/num"
                android:layout_toEndOf="@id/imgCard"
                android:layout_marginStart="8dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/crw"/>


        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@+id/appBar"
        app:layout_constraintEnd_toEndOf="@+id/appBar"
        app:layout_constraintTop_toTopOf="@+id/appBar"
        android:layout_marginTop="175dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="5dp"
        android:id="@+id/swipeView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:id="@+id/view"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swipe to See Other Participants Results.."
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/view"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swipeView"
        android:layout_marginTop="8dp"
        android:id="@+id/recyclerView"/>

</android.support.constraint.ConstraintLayout>
